<h3>Update Hospital</h3>

<form role='form' class="form-horizontal" action='/hospitals/<%=hospital.hospital_id%>' method='POST'>
	
	<div class='form-group'>
		<label for="id" class="col-sm-2 control-label">ID</label>
	    <div class="col-sm-10">
		<input type='hidden' class='form-control' id='hospital_id' name='hospital_id' value='<%= hospital.hospital_id %>'/><%= hospital.hospital_id %>
		</div>
	</div>
	
	<div class='form-group'>
		<label for="name" class="col-sm-2 control-label">Name</label>
	    <div class="col-sm-10">
		<input class='form-control' id='email' name='name' value='<%= hospital.name %>'/>
		</div>
	</div>
	
	<div class='form-group'>
		<label for="latitude" class="col-sm-2 control-label">Latitude</label>
	    <div class="col-sm-10">
		<input class='form-control' id='latitude' name='latitude' value='<%= hospital.latitude %>'/>
		</div>
	</div>

	<div class='form-group'>
		<label for="longitude" class="col-sm-2 control-label">Longitude</label>
	    <div class="col-sm-10">
		<input class='form-control' id='longitude' name='longitude' value='<%= hospital.longitude %>'/>
		</div>
	</div>

	<div class='form-group'>
		<label for="image" class="col-sm-2 control-label">Image URL</label>
	    <div class="col-sm-10">
		<input class='form-control' id='image' name='image' value='<%= hospital.image %>'/>
		</div>
	</div>

	<div class='form-group'>
		<label for="website" class="col-sm-2 control-label">Website</label>
	    <div class="col-sm-10">
		<input class='form-control' id='website' name='website' value='<%= hospital.website %>'/>
		</div>
	</div>

	<div class='form-group'>
		<label for="address" class="col-sm-2 control-label">Address</label>
	    <div class="col-sm-10">
		<input class='form-control' id='address' name='address' value='<%= hospital.address %>'/>
		</div>
	</div>

	<div class='form-group'>
		<label for="state" class="col-sm-2 control-label">State</label>
	    <div class="col-sm-10">
		<input class='form-control' id='state' name='state' value='<%= hospital.state %>'/>
		</div>
	</div>

	<div class='form-group'>
		<label for="bpid" class="col-sm-2 control-label">BPID</label>
	    <div class="col-sm-10">
		<input class='form-control' id='bpid' name='bpid' value='<%= hospital.bpid %>'/>
		</div>
	</div>
	
	<div class='form-group'>
		<label for="desk_id" class="col-sm-2 control-label">Desk ID</label>
	    <div class="col-sm-10">
		<input class='form-control' id='desk_id' name='desk_id' value='<%= hospital.desk_id %>'/>
		</div>
	</div>
	
  <button type="submit" class="btn btn-default">Submit</button>
</form>
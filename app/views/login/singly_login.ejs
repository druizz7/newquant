<script>
function submit_form() {
	$('#login-form').submit();
}
function display_form(what) {
	if( what == 'register') {
		$('#li-signin').attr('class','');
		$('#li-register').attr('class','active');
		$('#a-submit').html('Create')
	} else {
		$('#li-signin').attr('class','active');
		$('#li-register').attr('class','');		
		$('#a-submit').html('Sign-in')
	}
	$('#what').val(what)
	$('#login_div').toggle();
	$('#email').focus();
}

$(function() {
    $("#login-form").keypress(function (e) {
        if ((e.which && e.which == 13) || (e.keyCode && e.keyCode == 13)) {
            $('#a-submit').click();
            return false;
        } else {
            return true;
        }
    });
});
</script>

